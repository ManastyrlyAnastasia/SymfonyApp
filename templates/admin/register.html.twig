{# templates/admin/register_moderator.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Регистрация модератора{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #e0e0e0;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            margin: 20px 0;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 5px;
            text-decoration: none;
            color: #333333;
            font-size: 16px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #d0d0d0;
        }

        .sidebar .logout a {
            background-color: #ff0000;
            color: #ffffff;
        }

        .sidebar .logout a:hover {
            background-color: #cc0000;
        }

        .content {
            flex: 1;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .content h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-section {
            width: 100%;
            max-width: 600px;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 5px;
            text-align: center;
            padding: 40px 20px;
            position: relative;
        }

        .form-section .input-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            background-color: #f9f9f9;
            border: 1px solid #cccccc;
            border-radius: 5px;
            padding: 10px;
        }

        .form-section .input-group img {
            width: 24px;
            height: 24px;
            margin-right: 10px;
        }

        .form-section .input-group input {
            width: 100%;
            border: none;
            outline: none;
            background: none;
            padding: 10px;
            font-size: 16px;
        }

        .form-section button {
            padding: 10px 20px;
            background-color: #333333;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .form-section button:hover {
            background-color: #555555;
        }
    </style>

    <div class="sidebar">
        <a href="{{ path('register_moderator') }}">Регистрация модератора</a>
        <a href="{{ path('admin_faculty') }}">Факультеты</a>
        <a href="{{ path('mail_index') }}">Почта</a>
        <a href="{{ path('admin_files') }}">Личные файлы</a>
        <a href="{{ path('admin_report') }}">Отчеты</a>
        <a href="{{ path('change_password_index') }}">Смена пароля</a>
        <div class="logout">
            <a href="{{ path('app_logout') }}">Выход</a>
        </div>
    </div>

    <div class="content">
        <h1>Регистрация модератора</h1>
        <div class="form-section">
            <form method="post" action="{{ path('register_moderator') }}">
                <div class="input-group">
                    <img src="/path/to/user-icon.png" alt="Username"> <!-- Replace with your icon path -->
                    <input type="text" placeholder="Username" name="username" required>
                </div>
                <div class="input-group">
                    <img src="/path/to/email-icon.png" alt="Email"> <!-- Replace with your icon path -->
                    <input type="email" placeholder="Email" name="email" required>
                </div>
                <div class="input-group">
                    <img src="/path/to/lock-icon.png" alt="Password"> <!-- Replace with your icon path -->
                    <input type="password" placeholder="Password" name="password" required>
                </div>
                <button type="submit">Сохранить</button>
            </form>
        </div>
    </div>
{% endblock %}
