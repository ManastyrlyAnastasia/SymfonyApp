{# templates/faculty/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Отчеты{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 200px;
            background-color: #e0e0e0;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar a {
    display: block;
    padding: 15px;
    margin-bottom: 10px; /* Уменьшаем отступ между пунктами меню */
     margin-top: 40px;
    background-color: #ffffff;
    border: 1px solid #cccccc;
    border-radius: 5px;
    text-decoration: none;
    color: #333333;
    font-size: 16px;
    text-align: center;
    transition: background-color 0.3s ease;
}


        .sidebar a:hover {
            background-color: #d0d0d0;
        }

        .sidebar .logout a {
            background-color: #ff0000;
            color: #ffffff;
        }

        .sidebar .logout a:hover {
            background-color: #cc0000;
        }

        .content {
            flex: 1;
            padding: 20px;
            box-sizing: border-box;
        }

        .content h1 {
            text-align: center;
        }

        .facultys {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .faculty-item {
            padding: 40px 20px 20px 20px; /* Add extra padding at the top */
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 5px;
            text-align: center;
            position: relative;
        }

        .faculty-item a {
            text-decoration: none;
            color: #333333;
            font-size: 16px;
        }

        .faculty-item .actions {
            position: absolute;
            width: 100%;
            display: flex;
            justify-content: space-between;
            top: 10px;
            left: 10px;
            right: 10px;
        }

        .faculty-item .actions .delete {
    color: #ff0000;
    text-decoration: none;
    position: absolute;
    top: 0px; /* Adjust as needed */
    right: 20px; /* Adjust as needed */
}


        .faculty-item .actions .download {
            color: #333333;
            text-decoration: none;
        }

        .faculty-item .actions .delete:hover,
        .faculty-item .actions .download:hover {
            color: #000000;
        }

        .download-all {
            display: inline-block;
            padding: 10px 20px;
            background-color: #333333;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
        }

        .download-all:hover {
            background-color: #555555;
        }
    </style>

    <div class="sidebar">
        <a href="{{ path('register_moderator') }}">Регистрация модератора</a>
        <a href="{{ path('admin_faculty') }}">Факультеты</a>
        <a href="{{ path('mail_index') }}">Почта</a>
        <a href="{{ path('admin_files') }}">Личные файлы</a>
        <a href="{{ path('admin_report') }}">Отчеты</a>
        <a href="{{ path('change_password_index') }}">Смена пароля</a>
        <div class="logout">
            <a href="{{ path('app_logout') }}">Выход</a>
        </div>
    </div>

    <div class="content">
        <h1>Факультеты</h1>
        <div class="facultys">
            {% for i in 1..15 %}
                <div class="faculty-item">
                    <div class="actions">
                        <a href="#" class="download">&#9998;</a> {# Edit pencil symbol #}

                        <a href="#" class="delete">&#x274C;</a> {# X symbol for delete #}
                    </div>
                    <a href="#">Факультет {{ i }}</a>
                </div>
            {% endfor %}
        
{% endblock %}
