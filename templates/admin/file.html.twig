{# templates/admin/files.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Личные файлы{% endblock %}

{% block body %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #e0e0e0;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
        }

        .sidebar a {
            display: block;
            padding: 15px;
            margin-bottom: 10px;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 5px;
            text-decoration: none;
            color: #333333;
            font-size: 16px;
            text-align: center;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #d0d0d0;
        }

        .sidebar .logout a {
            background-color: #ff0000;
            color: #ffffff;
        }

        .sidebar .logout a:hover {
            background-color: #cc0000;
        }

        .content {
            flex: 1;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .content h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .upload-section {
            width: 100%;
            max-width: 800px;
            background-color: #ffffff;
            border: 1px solid #cccccc;
            border-radius: 5px;
            text-align: center;
            padding: 60px 20px;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .upload-section .upload-icon {
            width: 60px;
            height: 60px;
            background: url('/path/to/upload-icon.png') no-repeat center center; /* Replace with your icon path */
            background-size: contain;
            margin-bottom: 20px;
        }

        .upload-section p {
            margin: 20px 0;
            font-size: 18px;
            color: #666666;
        }

        .upload-buttons {
            display: flex;
            gap: 20px;
        }

        .upload-buttons button {
            padding: 10px 20px;
            background-color: #333333;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

        .upload-buttons button:hover {
            background-color: #555555;
        }

        .top-icons {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 10px;
        }

        .top-icons img {
            width: 30px;
            height: 30px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .top-icons img:hover {
            transform: scale(1.1);
        }
    </style>

    <div class="sidebar">
        <a href="{{ path('register_moderator') }}">Регистрация модератора</a>
        <a href="{{ path('admin_faculty') }}">Факультеты</a>
        <a href="{{ path('mail_index') }}">Почта</a>
        <a href="{{ path('admin_files') }}">Личные файлы</a>
        <a href="{{ path('admin_report') }}">Отчеты</a>
        <a href="{{ path('change_password_index') }}">Смена пароля</a>
        <div class="logout">
            <a href="{{ path('app_logout') }}">Выход</a>
        </div>
    </div>

    <div class="content">
        <h1>Личные файлы</h1>
        <div class="upload-section">
            <div class="top-icons">
                <img src="/path/to/grid-icon.png" alt="Grid View"> <!-- Replace with your grid view icon path -->
                <img src="/path/to/list-icon.png" alt="List View"> <!-- Replace with your list view icon path -->
                <img src="/path/to/folder-icon.png" alt="Folder View"> <!-- Replace with your folder view icon path -->
            </div>
            <div class="upload-icon" style="background-image: url('/path/to/upload-icon.png');"></div>
            <p>Для загрузки файлов перетащите их сюда.</p>
            <div class="upload-buttons">
                <button>Сохранить</button>
                <button>Отмена</button>
            </div>
        </div>
    </div>
{% endblock %}
