{% extends 'base.html.twig' %}

{% block title %}Delete Task{% endblock %}

{% block body %}
    <h1>Delete Task</h1>

    <p>Are you sure you want to delete this admin?</p>

    <form method="post">
        <input type="hidden" name="admin_id_to_delete" value="{{ admin.id }}">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <a href="{{ path('admin_delete', { 'id': admin.id }) }}" class="btn btn-primary">Cancel</a>


</body>
